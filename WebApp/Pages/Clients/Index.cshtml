@page
@model WebApp.Pages.Clients.IndexModel
@{
}

<br>
<h2>Clients List</h2>
<a class='btn btn-primary btn-sm' href='/CLients/Create'>Create Client</a>

<table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Address</td>
            <td>Created At</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>